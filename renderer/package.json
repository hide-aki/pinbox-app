{
  "name": "electron-react-ts-starter",
  "description": "This is a boilerplate starter for an electron project that uses react with typescript and has some fixes applied for common bugs.",
  "version": "0.1.0",
  "private": true,
  "author": "ohager",
  "repository": {
    "type": "git",
    "url": "https://github.com/ohager/pinbox-app"
  },
  "homepage": "./",
  "dependencies": {
    "@burstjs/core": "^0.4.3",
    "@burstjs/crypto": "^0.4.3",
    "@burstjs/util": "^0.4.3",
    "@material-ui/core": "^4.8.3",
    "@material-ui/icons": "^4.5.1",
    "@reduxjs/toolkit": "^1.2.1",
    "electron-is-dev": "^1.1.0",
    "qrcode.react": "^1.0.0",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-file-drop": "^0.2.8",
    "react-intl": "^3.11.0",
    "react-redux": "^7.1.3",
    "react-router-dom": "^5.1.2",
    "react-scripts": "3.3.0",
    "typescript": "3.7.4"
  },
  "scripts": {
    "react-start": "react-scripts start",
    "react-build": "react-scripts build",
    "react-test": "react-scripts test --env=jsdom",
    "react-prebuild": "cp ../main/src/*.js public/",
    "start": "cross-env BROWSER=none npm run react-start",
    "build": "cross-env BROWSER=none npm run react-build"
