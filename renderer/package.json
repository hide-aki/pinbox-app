    "@types/react-dom": "16.9.4",
    "@types/react-redux": "^7.1.5",
    "@types/react-router-dom": "^5.1.3",
    "concurrently": "^5.0.2",
    "cross-env": "^6.0.3",
    "electron": "^7.1.9",
    "electron-reload": "^1.5.0",
    "wait-on": "^3.3.0",
    "watch": "^1.0.2"
  }
